# Server Configuration
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/avos-bot

# Confluence API Configuration
CONFLUENCE_HOST=https://confluence.nvidia.com
CONFLUENCE_USERNAME=your_username
CONFLUENCE_API_TOKEN=your_api_token
CONFLUENCE_PERSONAL_TOKEN=your_personal_token

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# MCP Configuration
MCP_API_PORT=6277
MCP_INSPECTOR_PORT=6274
USE_MCP=true
PYTHON_EXECUTABLE=python3
MCP_CONFLUENCE_PATH=/home/nvidia/dhruvil/git/mcp-confluence

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Environment variables for Direct API to Confluence
# These are used when MCP is not available or USE_MCP is set to false
CONFLUENCE_URL=https://confluence.nvidia.com

# Environment variables for NVBugs
# These are typically accessed through MCP but can be configured directly if needed
NVBUGS_API_URL=your_nvbugs_api_url
NVBUGS_API_KEY=your_nvbugs_api_key 